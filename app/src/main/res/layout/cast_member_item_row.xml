<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="7dp"
    android:layout_margin="3dp"

    android:background="@drawable/rating_layout_background">

    <ImageView
        android:id="@+id/castMemberImage"
        android:layout_width="100dp"
        android:layout_marginStart="5dp"
        android:layout_height="110dp"
        android:layout_gravity="center"/>

    <LinearLayout
        android:id="@+id/castListLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:orientation="vertical">

        <TextView
            android:textColor="@color/white"
            android:textSize="23sp"
            android:text="Cast Member name"
            android:textStyle="bold"
            android:id="@+id/castMemberName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:textColor="@color/white"
            android:textSize="18sp"
            android:text="Playing as:"
            android:id="@+id/castMemberPlayingAs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>
</LinearLayout>
