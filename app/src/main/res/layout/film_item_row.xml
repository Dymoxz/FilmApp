<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:padding="7dp"
    android:layout_marginTop="3dp"
    android:layout_marginBottom="3dp"
    android:background="@drawable/rating_layout_background">
<LinearLayout
    android:id="@+id/detailBigLayout"
    android:layout_marginEnd="2dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView

        android:id="@+id/filmListImage"
        android:layout_width="100dp"
        android:layout_marginStart="5dp"
        android:layout_height="110dp"
        android:layout_gravity="center"/>

    <LinearLayout
        android:id="@+id/filmListLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="35dp"
        android:orientation="vertical"
        >
    <TextView
        android:textSize="22sp"
        android:text="title"
        android:textStyle="bold"
        android:id="@+id/filmListTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFF"
        />
    <TextView
        android:textSize="18sp"
        android:textColor="#FFF"
        android:text="genre"
        android:id="@+id/filmListGenre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:textSize="16sp"
        android:textColor="#FFF"
        android:text="releaseYear"
        android:id="@+id/filmListReleaseYear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    </LinearLayout>
</LinearLayout>

    <ImageButton

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
    android:id="@+id/movieItemButton"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/baseline_more_horiz_24"
        android:layout_gravity="center"
        android:background="#1e1e1e"
    />

</androidx.constraintlayout.widget.ConstraintLayout>
