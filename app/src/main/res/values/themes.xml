<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.FilmApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.FilmApp" parent="Base.Theme.FilmApp" />

    <style name="alertDialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:background">@color/background</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:titleTextColor" tools:targetApi="m">@color/white</item>
        <item name="android:editTextStyle">@style/AlertDialogEditTextStyle</item>
    </style>

    <style name="AlertDialogEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BlueRadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:buttonTint">@color/blue</item>
    </style>

</resources>